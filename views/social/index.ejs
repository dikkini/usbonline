<head>
	<title>BootLine</title>
	<meta charset="UTF-8">

	<% include ../partials/head.ejs %>

	<link rel="stylesheet" href="/css/social/main.css">

	<script src="/js/social/main.js"></script>
</head>

<body>

<% include ../partials/functions.ejs %>

<% include ../partials/navigation.ejs %>

<section>
	<div class="row">
		<div id="recent-gratitudes" class="col-xs-3" style="margin-top: 10px;">
			<% include ../partials/gratitudes.ejs %>
		</div>
		<div class="col-xs-9">
			<div class="row">
				<div class="col-xs-1">
					<i class="fa fa-comments fa-2x text-primary"></i>
				</div>
				<div class="col-xs-6">
					<div><strong>Categories</strong></div>
				</div>
				<div class="col-xs-2">
					<div class="text-center"><strong>Topics</strong></div>
				</div>
				<div class="col-xs-2">
					<div class="text-center"><strong>Comments</strong></div>
				</div>
			</div>
			<% var categories = pageData.categories; %>
			<% for(var i=0; i < categories.length; i++) { %>
			<% var category = categories[i]; %>
			<hr>
			<div class="row">
				<div class="col-xs-1"></div>
				<div class="col-xs-6">
					<h4><a href="/social/category/<%= category.id %>"><%= category.name %></a><br><small><%= category.description %></small></h4>
				</div>
				<div class="col-xs-2 container">
					<div class="text-center"><span class="badge"><%= category.topicsCount %></span></div>
				</div>
				<div class="col-xs-2">
					<div class="text-center"><span class="badge"><%= category.commentsCount %></span></div>
				</div>
			</div>
			<% } %>
		</div>
	</div>
</section>
</body>
</html>