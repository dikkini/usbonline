			<% for(var i=0; i < categories.length; i++) { %>
				<a href="/social/category/<%= categories[i].id %>" class="list-group-item">
					<h4 class="list-group-item-heading"><%= categories[i].name %></h4>
					<p class="list-group-item-text"><%= categories[i].description %></p>
				</a>
			<% } %>
		</div>
	</div>
</section>
