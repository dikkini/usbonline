<head>
	<title>BootLine</title>
	<meta charset="UTF-8">

	<% include ../partials/head.ejs %>

	<link rel="stylesheet" href="/css/social/main.css">

	<script src="/js/social/main.js"></script>
</head>

<body>

<% include ../partials/functions.ejs %>

<% include ../partials/navigation.ejs %>

<section>
	<div class="row">
		<div id="recent-gratitudes" class="col-xs-3" style="margin-top: 10px;">
			<% include ../partials/gratitudes.ejs %>
		</div>
		<div class="col-xs-9">
			<table class="table forum">
				<thead>
					<tr>
						<th class="cell-stat"></th>
						<th class="cell-stat hidden-xs hidden-sm">Categories</th>
						<th class="cell-stat text-center hidden-xs hidden-sm">Topics</th>
						<th class="cell-stat text-center hidden-xs hidden-sm">Comments</th>
					</tr>
				</thead>
				<tbody>
					<% var categories = pageData.categories; %>
					<% for(var i=0; i < categories.length; i++) { %>
					<% var category = categories[i]; %>
					<tr>
						<td class="text-center"><i class="fa fa-comment fa-2x text-primary"></i></td>
						<td>
							<h4><a href="/social/category/<%= category.id %>"><%= category.name %></a><br><small><%= category.description %></small></h4>
						</td>
						<td class="text-center hidden-xs hidden-sm"><span class="badge"><%= category.topicsCount %></span></td>
						<td class="text-center hidden-xs hidden-sm"><span class="badge"><%= category.commentsCount %></span></td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</section>
</body>
