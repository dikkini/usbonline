<head>
	<title>BootLine</title>
	<meta charset="UTF-8">

	<% include partials/head.ejs %>

	<link rel="stylesheet" href="/css/app.css">
	<link rel="stylesheet" href="/assets/lightbox/colorbox.css">

	<!--[if IE]>
		<link rel="stylesheet" href="/assets/small_ui/css/main_ie.css">
	<![endif]-->

	<script src="/assets/lightbox/jquery.colorbox-min.js"></script>
	<script src="/js/app.js"></script>
</head>

<body>

<% include partials/navigation.ejs %>

<input id="sessionId" type="hidden">
<input id="isClickOnce" type="hidden">
<input id="isAppRunning" type="hidden">
<input id="application-url" type="hidden" href="/clickonce/ClickLine.application">

<section id="app">
	<div id="page-content" class="row">
		<div class="row">
			<div id="right-content" class="col-lg-12">
				<div class="row" style="padding-bottom: 30px;">
					<div class="col-xs-2 col-xs-offset-4">
						<button id="launchApp" class="btn btn-lg btn-warning round_btn" onclick="window.location = '/app';">
							<span class="font">START APP</span>
						</button>
					</div>
					<div class="col-xs-3 banner-text">
						<h4><a href="#" class="smoothscroll" data-toggle="modal" data-target="#howto-modal">HOW TO</a></h4>
					</div>

					<button id="debug" class="btn btn-default col-lg-12">Debug</button>
				</div>
				<div id="loader-list">
					<div class="row loader-row">
						<div id="addLoaderBtnContainer" class="col-lg-6">
							<div id="addLoaderBtn" class="trian box-shadow"><div id="addCross"></div></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<div id="howto-modal" class="modal fade">
	<div class="modal-dialog" style="width: 100% !important; margin-top: 100px;">
		<div class="modal-content">
			<div class="modal-body">
				<div class="row banner-text">
					<div class="col-lg-3 col-lg-offset-2">
						<h3>Step 1 <small>Add loader </small></h3>
					</div>
					<div class="col-lg-3">
						<h3>Step 2 <small>Press START APP</small></h3>
					</div>
					<div class="col-lg-3">
						<h3>Step 3 <small>Launch ClickOnce application</small></h3>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-3 col-lg-offset-2">
						<div class="circular" href="/img/tutor/helper_1.png" style="background: url(/img/tutor/helper_1.png) 30% 60%;"></div>
					</div>
					<div class="col-lg-3">
						<div class="circular" href="/img/tutor/helper_2.png" style="background: url(/img/tutor/helper_2.png) 0% 0%;"></div>
					</div>
					<div class="col-lg-3">
						<div class="circular" href="/img/tutor/helper_3.png" style="background: url(/img/tutor/helper_3.png) 60% 100%;"></div>
					</div>
				</div>
				<hr style="padding-top: 30px;">
				<div class="row banner-text">
					<div class="col-lg-3 col-lg-offset-3">
						<h3>Step 4 <small>Let UAC launch BootLine application</small></h3>
					</div>
					<div class="col-lg-3">
						<h3>Step 5 <small>Let firewall launch BootLine application</small></h3>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-3 col-lg-offset-3">
						<div class="circular" href="/img/tutor/helper_4.png" style="background: url(/img/tutor/helper_4.png) 30% 80%;"></div>
					</div>
					<div class="col-lg-3">
						<div class="circular" href="/img/tutor/helper_5.png" style="background: url(/img/tutor/helper_5.png) 30% 80%;"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

</body>
</html>